{
    "cSpell.language": "en",
    
    "editor.fontLigatures": true,
    "editor.insertSpaces": true, 
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.suggestSelection": "first",
    "editor.tabSize": 4, 
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
          },
          "**/*.js.map": {
            "when": "$(basename)"
          }
    },
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "gitlens.advanced.messages": {"suppressShowKeyBindingsNotice": true},
    "gitlens.historyExplorer.enabled": true,
    "[markdown]": {"editor.quickSuggestions": true},
    "markdown.extension.preview.autoShowPreviewToSide": true,
    "phpSniffer.run": "onType",
    "phpSniffer.standard": "PSR2",
    "python.jediEnabled": false,
    "python.pythonPath": "/usr/local/bin/python3",
    "team.appInsights.enabled": false,
    "team.showWelcomeMessage": false,
    "telemetry.enableTelemetry": false,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.colorTheme": "Srcery",
    "window.zoomLevel": 2,
    "git.confirmSync": false,
    "python.linting.flake8Enabled": true,
    "editor.fontFamily": "FiraCode Nerd Font, Consolas, Menlo, monospace",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font, Consolas, Menlo, monospace",
    "[javascriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "terraform.indexing": {
      "enabled": false,
      "liveIndexing": false,
      "delay": 500,
      "exclude": [
        ".terraform/**/*",
        "**/.terraform/**/*"
      ] },
    "diffEditor.renderSideBySide": true,
    "http.proxyStrictSSL": false,
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "editor.multiCursorModifier": "alt",
    "python.languageServer": "Pylance",
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["<leader>", "'"],
        "commands": ["workbench.action.terminal.focus"],
      },
      {
        "before": ["<leader>", "d"],
        "commands": ["gitlens.diffWithPreviousInDiffLeft"],
      },
    ],
    "vim.enableNeovim": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.smartcase": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.highlightedyank.enable": true,
    "vim.useSystemClipboard": true,
    "vim.foldfix": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    "azure.cloud": "AzureCloud",
    "todo-tree.tree.showScanModeButton": false
  }
