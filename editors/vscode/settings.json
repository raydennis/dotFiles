{

  "azure.cloud": "AzureCloud",

  "cSpell.language": "en",

  "diffEditor.renderSideBySide": true,

  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontFamily": "FiraCode Nerd Font, Consolas, Menlo, monospace",
  "editor.fontLigatures": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "off",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "alt",
  "editor.renderWhitespace": "all",
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 4,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.wordWrap": "off",

  "explorer.confirmDelete": false,

  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    }
  },

  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "gitlens.advanced.messages": { "suppressShowKeyBindingsNotice": true },
  "gitlens.historyExplorer.enabled": true,

  "go.formatTool": "goimports",
  "go.toolsManagement.autoUpdate": true,
  "go.useLanguageServer": true,


  "http.proxyStrictSSL": false,

  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[markdown]": { "editor.quickSuggestions": true },
  "markdown.extension.preview.autoShowPreviewToSide": true,

  "phpSniffer.run": "onType",
  "phpSniffer.standard": "PSR2",

  "python.jediEnabled": false,
  "python.pythonPath": "~/virtualenvs/scratch/bin",
  "python.linting.flake8Enabled": true,
  "python.languageServer": "Pylance",
  "python.linting.enabled": true,


  "terraform.indexing": {
    "enabled": false,
    "liveIndexing": false,
    "delay": 500,
    "exclude": [".terraform/**/*", "**/.terraform/**/*"]
  },

  "team.appInsights.enabled": false,
  "team.showWelcomeMessage": false,

  "telemetry.enableTelemetry": false,

  "terminal.integrated.fontFamily": "FiraCode Nerd Font, Consolas, Menlo, monospace",

  "todo-tree.tree.showScanModeButton": false,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",

  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "'"],
      "commands": ["workbench.action.terminal.focus"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["gitlens.diffWithPreviousInDiffLeft"]
    }
  ],
  "vim.enableNeovim": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.smartcase": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.highlightedyank.enable": true,
  "vim.useSystemClipboard": true,
  "vim.foldfix": true,

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "window.zoomLevel": 3,

  "workbench.colorTheme": "Nord Native",
  "workbench.list.smoothScrolling": true

}
